{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@schoolsquirrel/chat-ui": [
        "dist/schoolsquirrel/chat-ui/schoolsquirrel-chat-ui",
        "dist/schoolsquirrel/chat-ui"
      ],
      "@schoolsquirrel/forms": [
        "dist/schoolsquirrel/forms/schoolsquirrel-forms",
        "dist/schoolsquirrel/forms"
      ],
    }
  }
}